@page
@model Web.DiscoverModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Descover</title>
</head>
<body>
    <div id="recos">
        @for (int i = 0; i < Model.Movies.Count; i++)
        {
            <div class="card">
                <img class="card-img-top" src="@Model.Movies[i].ImageUri" alt="@Model.Movies[i].Title" />
                <div class="card-body">
                    <div class="card-text">Title: @Model.Movies[i].Title</div>
                    <a asp-page="./Details" asp-route-id="@Model.Movies[i].TmdbId">read more</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
