@using Microsoft.AspNetCore.Authentication.AzureADB2C.UI
@using Microsoft.Extensions.Options
@inject IOptionsMonitor<AzureADB2COptions> AzureADB2COptions

@{
    var options = AzureADB2COptions.Get(AzureADB2CDefaults.AuthenticationScheme);
}


    <ul class="navbar-nav">
        @if (User.Identity.IsAuthenticated)
        {
            @if (!string.IsNullOrEmpty(options.EditProfilePolicyId))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Index">
                        <img src="~/img/home.png" alt="Home" style="width: 40px; padding-right: 15px" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Movie" asp-action="Discover">
                        <img src="~/img/discover.png" alt="Discover" style="width: 40px; padding-right: 15px" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="AzureADB2C" asp-controller="Account" asp-action="EditProfile">
                        <img src="~/img/userIcon.png" alt="Edit Profile" style="width: 40px; padding-right: 15px" />
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <span class="navbar-text text-dark">Hello @User.Identity.Name!</span>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AzureADB2C" asp-controller="Account" asp-action="SignOut">
                    <img src="~/img/signin.png" alt="Sign Out" style="width:40px; padding-right: 15px" />
                </a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark"  asp-page="/Index">
                    <img src="~/img/home.png" alt="home" style="width:40px; padding-right: 15px" />
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AzureADB2C" asp-controller="Account" asp-action="SignIn">
                    <img src="~/img/signin.png" alt="Sign In" style="width:40px; padding-right: 15px" />
                </a>
            </li>
        }
    </ul>
